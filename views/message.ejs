<%- include('layout/header') %>

<main>
    <h1>Message Details</h1>
    
    <div class="message-detail">
        <p class="message-text"><%= message.text %></p>
        <p class="message-user">Posted by <%= message.user %></p>
        <p class="message-date">
            on <%= message.added.toLocaleDateString() %>
            at <%= message.added.toLocaleTimeString() %>
        </p>
    </div>
    
    <div class="button-group">
        <a href="/" class="back-btn">Back to Messages</a>
        
        <form method="POST" action="/message/<%= messageId %>/delete" 
              onsubmit="return confirm('Are you sure you want to delete this message?')" 
              class="delete-form">
            <button type="submit" class="delete-btn">Delete Message</button>
        </form>
    </div>
</main>

<%- include('layout/footer') %>